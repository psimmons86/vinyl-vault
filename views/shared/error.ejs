<%- include('../partials/header.ejs') %>

<div class="max-w-3xl mx-auto px-4 py-8">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-8 text-center">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-4"><%= statusCode %> - <%= title %></h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 mb-8"><%= message %></p>
        
        <% if (process.env.NODE_ENV === 'development' && stack) { %>
            <div class="mt-8 text-left bg-gray-50 dark:bg-gray-900 p-6 rounded-lg">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-4">Error Details</h3>
                <pre class="bg-gray-100 dark:bg-gray-800 p-4 rounded-lg overflow-x-auto text-sm text-gray-800 dark:text-gray-200"><%= stack %></pre>
                
                <% if (details && Object.keys(details).length > 0) { %>
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mt-6 mb-4">Additional Information</h3>
                    <pre class="bg-gray-100 dark:bg-gray-800 p-4 rounded-lg overflow-x-auto text-sm text-gray-800 dark:text-gray-200"><%= JSON.stringify(details, null, 2) %></pre>
                <% } %>
            </div>
        <% } %>

        <div class="mt-8 flex items-center justify-center space-x-4">
            <button onclick="window.history.back()" class="btn btn-secondary">Go Back</button>
            <a href="/" class="btn btn-primary">Home</a>
            <% if (typeof req !== 'undefined' && req.user) { %>
                <a href="/records" class="btn btn-primary">My Collection</a>
            <% } %>
        </div>
    </div>
</div>

<%- include('../partials/footer.ejs') %>
