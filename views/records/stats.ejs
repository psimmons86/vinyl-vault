<%- include('../partials/header.ejs') %>

<div class="container">
    <div class="collection-header">
        <h1 class="collection-title">Collection Stats</h1>
    </div>

    <div class="row">
        <div class="col s12">
            <div class="total-records center-align">
                <h2 class="total-number"><%= totalRecords %></h2>
                <p class="total-label">Total Records</p>
            </div>
        </div>

        <div class="col s12 m6">
            <div class="stat-card">
                <h3>Most Played Record</h3>
                <% if (mostPlayed && mostPlayed.plays > 0) { %>
                    <div class="record-card">
                        <div class="record-artwork">
                            <img src="<%= mostPlayed.imageUrl || '/images/default-album.png' %>" 
                                 alt="Album art for <%= mostPlayed.title %>"
                                 class="record-img">
                            <div class="record-overlay">
                                <h2 class="record-title"><%= mostPlayed.title %></h2>
                                <p class="record-artist"><%= mostPlayed.artist %></p>
                                <p class="record-plays"><%= mostPlayed.plays %> plays</p>
                            </div>
                        </div>
                    </div>
                <% } else { %>
                    <p class="empty-state">No records played yet</p>
                <% } %>
            </div>
        </div>

        <div class="col s12 m6">
            <div class="stat-card">
                <h3>Last Played</h3>
                <% if (recentlyPlayed) { %>
                    <div class="record-card">
                        <div class="record-artwork">
                            <img src="<%= recentlyPlayed.imageUrl || '/images/default-album.png' %>" 
                                 alt="Album art for <%= recentlyPlayed.title %>"
                                 class="record-img">
                            <div class="record-overlay">
                                <h2 class="record-title"><%= recentlyPlayed.title %></h2>
                                <p class="record-artist"><%= recentlyPlayed.artist %></p>
                                <p class="record-plays">Played on <%= recentlyPlayed.lastPlayed.toLocaleDateString() %></p>
                            </div>
                        </div>
                    </div>
                <% } else { %>
                    <p class="empty-state">No records played yet</p>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer.ejs') %>