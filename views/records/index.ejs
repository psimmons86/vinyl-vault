<%- include('../partials/header.ejs') %>

<div class="collection-stats">
    <p>Total Records: <%= records.length %></p>
</div>

<div class="sort-controls">
    Sort by:
    <a href="/records?sort=artist" class="<%= currentSort === 'artist' ? 'active' : '' %>">Artist</a> |
    <a href="/records" class="<%= !currentSort ? 'active' : '' %>">Date Added</a>
</div>

<a href="/records/new" class="nav-link">Add New Record</a>

<% if (records && records.length) { %>
    <div class="records-grid">
        <% records.forEach(function(record) { %>
            <div class="record-card">
                <img src="<%= record.imageUrl || '/images/default-album.png' %>" 
                     alt="Album art for <%= record.title %>"
                     class="record-img">
                <div class="record-title"><%= record.title %></div>
                <div class="record-artist"><%= record.artist %></div>
                <div class="record-format"><%= record.format %></div>
                <div class="record-details">
                    <a href="/records/<%= record._id %>">View Details</a>
                </div>
            </div>
        <% }); %>
    </div>
<% } else { %>
    <p>No records yet!</p>
<% } %>

<%- include('../partials/footer.ejs') %>