<%- include('../partials/header.ejs') %>

<div class="container">
    <div class="form-container">
        <h2>Profile Settings</h2>

        <div class="row">
            <div class="col s12">
                <div class="card">
                    <div class="card-content">
                        <form action="/records/settings" method="POST">
                            <p>
                                <label>
                                    <input type="checkbox" name="isPublic" <%= user.isPublic ? 'checked' : '' %>>
                                    <span>Make my collection public</span>
                                </label>
                            </p>
                            <p class="grey-text">When enabled, other users can view your collection and profile</p>
                            
                            <div class="card-action">
                                <button type="submit" class="btn waves-effect waves-light">
                                    Save Settings
                                    <i class="material-icons right">save</i>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer.ejs') %>