<%- include('./partials/header.ejs') %>

<div class="home-container">
    <section class="hero-section">
        <div class="hero-content">
            <h1 class="site-title">Share Space</h1>
            <p class="hero-tagline">Welcome to your space.</p>
            
            <!-- Sign Up Form -->
            <div class="auth-card">
                <form action="/auth/sign-up" method="POST" class="signup-form">
                    <div class="form-group">
                        <label for="username">Username</label>
                        <input type="text" name="username" id="username" required />
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" name="password" id="password" required />
                    </div>
                    <div class="form-group">
                        <label for="confirmPassword">Confirm Password</label>
                        <input type="password" name="confirmPassword" id="confirmPassword" required />
                    </div>
                    <button type="submit" class="btn btn-primary">Create Account</button>
                    <div class="auth-separator">
                        <span>Already have an account?</span>
                    </div>
                    <a href="/auth/sign-in" class="btn btn-secondary">Sign In</a>
                </form>
            </div>
        </div>
    </section>

    <!-- Recent Records Grid -->
    <section class="recent-records">
        <h2>Recently Shared</h2>
        <div class="records-grid">
            <% if (recentRecords && recentRecords.length > 0) { %>
                <% recentRecords.forEach(record => { %>
                    <div class="record-card">
                        <div class="record-artwork">
                            <img src="<%= record.imageUrl || '/images/default-album.png' %>" 
                                 alt="Album artwork for <%= record.title %>"
                                 class="record-img">
                            <div class="record-overlay">
                                <p class="record-title"><%= record.title %></p>
                                <p class="record-artist"><%= record.artist %></p>
                                <p class="record-owner">Shared by <%= record.owner.username %></p>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } %>
        </div>
    </section>
</div>

<%- include('./partials/footer.ejs') %>