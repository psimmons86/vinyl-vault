    padding-left: 5px;
}

.vinyl-logo .brand-text::after {
    content: 'Vinyl Vault';
    position: absolute;
    left: 5px;
    top: 0;
    color: rgba(255,255,255,0.1);
    z-index: -1;
    filter: blur(4px);
}

@keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
}

/* Responsive adjustments */
@media (max-width: 600px) {
    .vinyl-logo {
        margin-left: 50px;
