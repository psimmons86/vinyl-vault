<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VinylVault</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <nav class="navbar">
        <div class="nav-container">
            <a href="/" class="logo">
                <span class="logo-text">VinylVault</span>
            </a>
            <div class="nav-links">
                <% if (user) { %>
                    <a href="/records" class="nav-link">My Records</a>
                    <a href="/auth/sign-out" class="nav-link">Sign Out</a>
                    <span class="nav-link"><%= user.username %></span>
                <% } else { %>
                    <a href="/auth/sign-up" class="nav-link">Sign Up</a>
                    <a href="/auth/sign-in" class="nav-link">Sign In</a>
                <% } %>
            </div>
        </div>
    </nav>