                  <input type="checkbox" id="darkModeToggle">
                  <span class="lever"></span>
                  ðŸŒ™
                </label>
              </div>
            </li>
          <% } else { %>
            <li><a href="/auth/login">Login</a></li>
            <li><a href="/auth/register">Register</a></li>
            <li>
              <div class="switch">
                <label>
                  ðŸŒž
                  <input type="checkbox" id="darkModeToggle">
                  <span class="lever"></span>
                  ðŸŒ™
                </label>
              </div>
            </li>
          <% } %>
        </ul>
      </div>
    </nav>

    <!-- Add Record Dropdown Structure -->
    <ul id="add-record-dropdown" class="dropdown-content">
      <li><a href="/records/new"><i class="material-icons">playlist_add</i>Add Manually</a></li>
      <li><a href="/records/discogs"><i class="material-icons">search</i>Add from Discogs</a></li>
    </ul>

    <!-- User Dropdown Structure -->
    <% if (locals.user) { %>
    <ul id="user-dropdown" class="dropdown-content">
      <li><a href="/notifications">Notifications</a></li>
      <li><a href="/users/<%= user.username %>">Profile</a></li>
      <% if (user.isAdmin) { %>
        <li><a href="/admin">Admin</a></li>
      <% } %>
      <li class="divider"></li>
      <li><a href="/auth/logout">Logout</a></li>
    </ul>
    <% } %>

    <!-- Mobile Navigation -->
    <ul class="sidenav" id="mobile-nav">
      <% if (locals.user) { %>
        <li><a href="/records"><i class="material-icons">album</i>Collection</a></li>
        <li><a href="/stores"><i class="material-icons">store</i>Record Stores</a></li>
        <li><a href="/blog"><i class="material-icons">article</i>Blog</a></li>
        <li><a href="/forum"><i class="material-icons">forum</i>Forum</a></li>
        <li><a href="/blog/admin/featured"><i class="material-icons">star</i>Featured</a></li>
        <li><a href="/records/new"><i class="material-icons">playlist_add</i>Add Record</a></li>
        <li><a href="/records/discogs"><i class="material-icons">search</i>Add from Discogs</a></li>
        <li><a href="/notifications">Notifications</a></li>
        <li><a href="/users/<%= user.username %>">Profile</a></li>
        <% if (user.isAdmin) { %>
          <li><a href="/admin">Admin</a></li>
        <% } %>
        <li class="divider"></li>
        <li><a href="/auth/logout">Logout</a></li>
      <% } else { %>
        <li><a href="/auth/login">Login</a></li>
        <li><a href="/auth/register">Register</a></li>
      <% } %>
      <li>
        <div class="switch">
          <label>
            ðŸŒž
            <input type="checkbox" id="darkModeToggle-mobile">
            <span class="lever"></span>
            ðŸŒ™
          </label>
        </div>
      </li>
    </ul>

    <main class="main-content"></main>
    
    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <style>
      :root {
        --primary: #D81B60;
        --primary-dark: #C2185B;
        --text: #424242;
        --border: #e0e0e0;
      }
    </style>
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        // Initialize dropdowns
        var userDropdown = document.querySelector('[data-target="user-dropdown"]');
        if (userDropdown) {
          M.Dropdown.init(userDropdown, {
            constrainWidth: false,
            coverTrigger: false,
            alignment: 'right'
          });
        }

        var addRecordDropdown = document.querySelector('[data-target="add-record-dropdown"]');
        if (addRecordDropdown) {
          M.Dropdown.init(addRecordDropdown, {
            constrainWidth: false,
            coverTrigger: false,
            alignment: 'left'
          });
        }

        // Initialize sidenav
        var sidenav = document.querySelectorAll('.sidenav');
        M.Sidenav.init(sidenav, {
          edge: 'left',
          draggable: true
        });
      });
    </script>
  </body>
</html>
