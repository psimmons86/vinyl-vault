<%- include('../partials/header') %>

<div class="container mt-4">
    <h1><%= title %></h1>

    <% if (!store) { %>
        <div class="alert alert-info">
            Use the search box on any store's page to search their inventory.
        </div>
    <% } else { %>
    <% } %>

    <% if (error) { %>
        <div class="alert alert-danger"><%= error %></div>
    <% } %>

    <div class="row">
        <% if (results && results.length > 0) { %>
            <% let currentStore = null; %>
            <% results.forEach(result => { %>
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="<%= result.thumb %>" class="card-img-top" alt="<%= result.title %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= result.title %></h5>
                            <p class="card-text text-muted"><%= result.artist %></p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%= result.format %> â€¢ <%= result.year %>
                                </small>
                            </p>
                            <a href="<%= result.url %>" class="btn btn-outline-primary btn-sm" target="_blank">
                                View on Discogs
                            </a>
                        </div>
                    </div>
                </div>
            <% }); %>
            <% if (results.length > 0) { %>
                </div></div></div>
            <% } %>
        <% } else if (query) { %>
            <div class="col-12">
                <div class="alert alert-info">
                    No records found matching your search.
                </div>
            </div>
        <% } %>
    </div>
</div>


<%- include('../partials/footer') %>
