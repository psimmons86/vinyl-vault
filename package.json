{
  "name": "vinyl-vault-mobile",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node server.js",
    "dev": "nodemon server.js",
    "seed": "node seed.js",
    "build:css": "./node_modules/.bin/tailwindcss -i ./public/stylesheets/tailwind.css -o ./public/stylesheets/style.css --watch",
    "build:css:prod": "./node_modules/.bin/tailwindcss -i ./public/stylesheets/tailwind.css -o ./public/stylesheets/style.css --minify",
    "build:js": "babel public/javascripts/components --out-dir public/javascripts/dist --presets=@babel/preset-react",
    "build": "npm run build:css:prod && npm run build:js",
    "heroku-postbuild": "npm run build"
  },
  "keywords": [
    "vinyl",
    "records",
    "music",
    "collection",
    "social",
    "mobile-first",
    "responsive"
  ],
  "author": "",
  "license": "ISC",
  "description": "A mobile-first social platform for vinyl record collectors",
  "engines": {
    "node": "20.x"
  },
  "dependencies": {
    "@babel/runtime": "^7.23.9",
    "autoprefixer": "^10.4.17",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "compression": "^1.8.0",
    "connect-flash": "^0.1.1",
    "connect-mongo": "^5.1.0",
    "csurf": "^1.11.0",
    "disconnect": "^1.2.2",
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "express-ejs-layouts": "^2.5.1",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.18.1",
    "hammerjs": "^2.0.8",
    "marked": "^15.0.6",
    "method-override": "^3.0.0",
    "mongoose": "^8.9.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "postcss": "^8.4.35",
    "postcss-cli": "^11.0.0",
    "sharp": "^0.33.5",
    "slugify": "^1.6.6",
    "swiper": "^11.0.6",
    "tailwindcss": "^3.4.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.9",
    "@babel/core": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@babel/preset-react": "^7.23.9",
    "@babel/plugin-transform-runtime": "^7.23.9",
    "nodemon": "^3.1.9",
    "postcss-import": "^16.0.1"
  }
